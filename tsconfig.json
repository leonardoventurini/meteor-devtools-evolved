{
  "include": ["src/*.d.ts", "src/**/*.ts", "src/**/*.tsx"],

  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "jsx": "react",
    "baseUrl": "./",
    "importHelpers": true,
    "paths": {
      "@/*": ["src/*"]
    }
  }
}
