{
  "include": ["src/*.d.ts", "src/**/*.ts", "src/**/*.tsx"],

  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "jsx": "react",
    "baseUrl": "."
  }
}
